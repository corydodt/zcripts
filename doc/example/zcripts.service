[Unit]
Description=zcripts vm bootstrapper
Before=systemd-user-sessions.service
Wants=network-online.target zcriptsinit.mount systemd-hostnamed.service
After=network-online.target zcriptsinit.mount systemd-hostnamed.service
ConditionPathExists=!%S/%N-first-boot.done

[Service]
Type=oneshot
ExecStart=/usr/local/bin/zcripts --ignore-missing-host --first-boot
ExecStartPost=/usr/bin/touch %S/%N-first-boot.done
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
